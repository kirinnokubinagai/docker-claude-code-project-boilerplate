#!/bin/bash
# 環境変数自動読み込みスクリプト
# このファイルは.bashrcから自動的に読み込まれます

# プロジェクトの環境変数を読み込む
if [ -f /workspace/.env ]; then
    export $(grep -v '^#' /workspace/.env | xargs) 2>/dev/null
fi

# MCPサービスの環境変数を読み込む
if [ -f /workspace/.env.mcp ]; then
    export $(grep -v '^#' /workspace/.env.mcp | xargs) 2>/dev/null
fi